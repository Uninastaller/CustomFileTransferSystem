            <DataGrid.RowDetailsTemplate>
            <DataTemplate>
                <DataGrid x:Name="dgRequestsDetail" ItemsSource="{Binding Clients}" IsReadOnly="False" AutoGenerateColumns="True" CanUserAddRows="True">

