<model:BaseWindowForWPF x:Class="Client.Windows.MainWindow"
        xmlns:model="clr-namespace:Common.Model;assembly=Common"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Windows"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="450"
        Width="1100"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip">

    <Border CornerRadius="32" BorderThickness="10" BorderBrush="#453a26" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>

            <Button Style="{DynamicResource CloseButtonStyle}" x:Name="btnClose" Content="" Click="btnClose_Click" Grid.Column="0" Grid.Row="0" Panel.ZIndex="1"
                VerticalAlignment="Top" HorizontalAlignment="Right"
                Height="20" Width="20"
                Margin="0,0,15,0">
                <Button.Background>
                    <ImageBrush ImageSource="pack://application:,,,/Common;component/Images/Close_Default.png" Stretch="None"/>
                </Button.Background>
            </Button>

            <Button Style="{DynamicResource MaximizeButtonStyle}" x:Name="btnMaximize" Content="" Click="btnMaximize_Click" Grid.Column="0" Grid.Row="0" Panel.ZIndex="1"
                VerticalAlignment="Top" HorizontalAlignment="Right"
                Height="20" Width="20"
                Margin="0,0,40,0">
                <Button.Background>
                    <ImageBrush ImageSource="pack://application:,,,/Common;component/Images/Maximize_Default.png" Stretch="None"/>
                </Button.Background>
            </Button>

            <Button Style="{DynamicResource MinimizeButtonStyle}" x:Name="btnMinimize" Content="" Click="btnMinimize_Click" Grid.Column="0" Grid.Row="0" Panel.ZIndex="1"
                VerticalAlignment="Top" HorizontalAlignment="Right"
                Height="20" Width="20"
                Margin="0,0,65,0">
                <Button.Background>
                    <ImageBrush ImageSource="pack://application:,,,/Common;component/Images/Minimize_Default.png" Stretch="None"/>
                </Button.Background>
            </Button>

            <Label Content="Client Application" HorizontalAlignment="Right" VerticalAlignment="Bottom" Panel.ZIndex="1"
               Height="24"
               Margin="0,0,5,0"
               FontFamily="Consolas"
               Foreground="Gray"
               FontWeight="Bold"/>

            <Border CornerRadius="15" BorderThickness="20">
                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#4e3926" Offset="0"/>
                        <GradientStop Color="#453a26" Offset=".33"/>
                        <GradientStop Color="#753b22" Offset=".66"/>
                        <GradientStop Color="#383838" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>

                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition Width="100"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="20"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="20"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#4e3926" Offset="0"/>
                            <GradientStop Color="#453a26" Offset=".33"/>
                            <GradientStop Color="#753b22" Offset=".66"/>
                            <GradientStop Color="#383838" Offset="1"/>
                        </LinearGradientBrush>
                    </Grid.Background>

                    <TextBlock Style="{DynamicResource TextBlockStyle1}" x:Name="tbTitle" Grid.Row="1" Grid.Column="1"
                           Text="Custom File Transfer System"
                           FontFamily="Arial"
                           FontSize="40"
                           FontWeight="Bold"
                           Grid.ColumnSpan="12"/>

                    <TextBlock Style="{DynamicResource TextBlockStyle1}" x:Name="tbConnectionWithCentralServer" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center"
                           Text="Connection with central server: "
                           FontFamily="Arial"                           
                           FontSize="20"
                           FontWeight="Bold"/>

                    <Ellipse x:Name="elpServerStatus" Grid.Row="2" Grid.Column="2" Fill="#741b0c"
                         Height="45" Width="45"/>

                    <!--<TextBlock Style="{DynamicResource TextBlockStyle1}" x:Name="tbServerIpAddress" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Margin="0,10,0,10"
                           Text="IpAddress: "
                           FontFamily="Arial"
                           FontSize="15"
                           FontWeight="Bold"/>

                    <TextBlock Style="{DynamicResource TextBlockStyle1}" x:Name="tbServerIpAddressVariable" Grid.Row="3" Grid.Column="2" VerticalAlignment="Center"
                           Text="127.0.0.1"
                           FontFamily="Arial"
                           FontSize="15"
                           FontWeight="Bold"/>

                    <TextBlock Style="{DynamicResource TextBlockStyle1}" x:Name="tbServerPort" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" Margin="0,10,0,10"
                           Text="Port: "
                           FontFamily="Arial"
                           FontSize="15"
                           FontWeight="Bold"/>

                    <TextBlock Style="{DynamicResource TextBlockStyle1}" x:Name="tbServerPortVariable" Grid.Row="4" Grid.Column="2" VerticalAlignment="Center"
                           Text="8080"
                           FontFamily="Arial"
                           FontSize="15"
                           FontWeight="Bold"/>

                    <Button Style="{DynamicResource ButtonStyle1}" x:Name="btnStartServer" Content="Start Server" Click="btnStartServer_Click" Grid.Row="5" Grid.Column="1"
                        Margin="0,10,15,10"
                        FontSize="15"
                        Grid.ColumnSpan="2"/>

                    <Button Style="{DynamicResource ButtonStyle1}" x:Name="btnRestartServer" Content="Restart Server" Click="btnRestartServer_Click" Grid.Row="6" Grid.Column="1"
                        Margin="0,10,15,10"
                        FontSize="15"
                        Grid.ColumnSpan="2"/>

                    <Button Style="{DynamicResource ButtonStyle1}" x:Name="btnStopServer" Content="Stop Server" Click="btnStopServer_Click" Grid.Row="7" Grid.Column="1"
                        Margin="0,10,15,10"
                        FontSize="15"
                        Grid.ColumnSpan="2"/>-->


                    <!--<DataGrid Style="{DynamicResource DataGridStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" RowStyle="{DynamicResource DataGridRowStyle1}"
                          Grid.Row="3" Grid.Column="4" Grid.RowSpan="10"
                          x:Name="dtgClients"
                          d:ItemsSource="{d:SampleData ItemCount=4}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding SessionGuid}"/>
                            <DataGridTextColumn Header="IpAddress:Port" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding RemoteEndpoint}"/>
                            <DataGridTextColumn Header="SessionState" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding ServerSessionState}"/>

                            --><!--<DataGridCheckBoxColumn Header="Pluged" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding Plugged}"/>--><!--


                            <DataGridTemplateColumn Header="Operations" IsReadOnly="True" Width="auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Disconnect" Style="{StaticResource DataGridButtonStyle}" Tag="{Binding}" x:Name="btnDisconnect" Click="btnDisconnect_Click"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>
                    </DataGrid>-->

                </Grid>

            </Border>
        </Grid>
    </Border>
</model:BaseWindowForWPF>
